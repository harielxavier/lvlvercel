# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Session Security (generate a 32+ character random string)
SESSION_SECRET=your-32-character-minimum-session-secret-here

# Authentication (for production)
REPLIT_AUTH_ISSUER=https://replit.com
REPLIT_AUTH_CLIENT_ID=your-replit-oauth-client-id
REPLIT_AUTH_CALLBACK_URL=https://your-app-domain.vercel.app/auth/callback

# Application Settings
NODE_ENV=production
PORT=5000

# Optional Services
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# SMS Service (not implemented yet)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone
